<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ece.owngallery"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".ApplicationOwnGallery"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ActivityHome"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNew"
            >

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name=".activity.AlbumActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNew" >
        </activity>

        <activity
            android:name=".activity.PhotoPreviewActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNew" >
        </activity>


        <activity
            android:name=".activity.MemberActivity"
            android:theme="@style/AppThemeNew" >
         </activity>

        <activity android:name=".activity.CompareHome"
            android:theme="@style/AppThemeNew">
        </activity>

        <activity android:name=".activity.CompareAlbum"
            android:theme="@style/AppThemeNew">
        </activity>

        <activity android:name=".activity.CompareResult"
            android:theme="@style/AppThemeNew">
        </activity>


    </application>

</manifest>